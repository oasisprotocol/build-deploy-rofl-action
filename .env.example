# Environment variables for local testing with @github/local-action
# Copy this file to .env and fill in the values
# Run: npm run local-action

# ============================================
# GitHub Actions Environment (auto-set)
# ============================================
CI=true
GITHUB_ACTIONS=true
ACTIONS_STEP_DEBUG=true

# ============================================
# Local Action Paths
# ============================================
# Working directory for action execution
LOCAL_ACTION_WORKSPACE=.

# ============================================
# Required Action Inputs
# ============================================
# Oasis CLI version to install
INPUT_CLI_VERSION=0.17.1

# Wallet account to use (required)
INPUT_WALLET_ACCOUNT=test:alice

# Network to use
INPUT_NETWORK=testnet

# ============================================
# ROFL Configuration
# ============================================
# Deployment name (optional)
INPUT_DEPLOYMENT=default

# Working directory for ROFL commands
INPUT_WORKING_DIRECTORY=.github/super-rofl-test

# ============================================
# Build Options
# ============================================
# Run in offline mode (no network access)
INPUT_OFFLINE=true

# Skip transaction signing
INPUT_UNSIGNED=true

# Verify build against manifest
INPUT_VERIFY=true

# Skip specific steps (optional)
# INPUT_SKIP_BUILD=false
# INPUT_SKIP_UPDATE=false
# INPUT_SKIP_DEPLOY=false

# ============================================
# Output Files (optional)
# ============================================
# Separate output files for update and deploy
# INPUT_UPDATE_OUTPUT_FILE=update.cbor
# INPUT_DEPLOY_OUTPUT_FILE=deploy.cbor

# Transaction output format
# INPUT_FORMAT=cbor

# ============================================
# Docker Options (optional)
# ============================================
# Enable Docker build
# INPUT_DOCKER_BUILD=true

# Enable Docker push
# INPUT_DOCKER_PUSH=true

# Docker registry URL
# INPUT_DOCKER_REGISTRY=ghcr.io

# Docker image name with tag
# INPUT_DOCKER_IMAGE=ghcr.io/myorg/myapp:latest

# Docker credentials
# INPUT_DOCKER_USERNAME=username
# INPUT_DOCKER_PASSWORD=token

# Docker build context
# INPUT_DOCKER_CONTEXT=.

# Dockerfile path
# INPUT_DOCKER_FILE=Dockerfile

# Build arguments (newline-separated)
# INPUT_DOCKER_BUILD_ARGS=VERSION=1.0.0

# Target platforms
# INPUT_DOCKER_PLATFORMS=linux/amd64

# ============================================
# Image Verification (optional)
# ============================================
# Enable image digest verification
# INPUT_VERIFY_IMAGE=true

# Compose file to verify against
# INPUT_VERIFY_COMPOSE_FILE=compose.yaml

# Service name in compose file
# INPUT_VERIFY_IMAGE_NAME=frontend

# ============================================
# Safe Multisig (optional)
# ============================================
# Enable Safe transaction proposal
# INPUT_SAFE_PROPOSE=true

# Safe contract address
# INPUT_SAFE_ADDRESS=0x...

# Proposer private key (KEEP SECRET!)
# INPUT_SAFE_PROPOSER_KEY=0x...

# RPC URL for Safe chain
# INPUT_SAFE_RPC_URL=https://sapphire.oasis.io

# Safe transaction service URL
# INPUT_SAFE_SERVICE_URL=https://safe.oasis.io

# Chain ID
# INPUT_SAFE_CHAIN_ID=23294

# ============================================
# Wallet Import (optional)
# ============================================
# Enable wallet import before operations
# INPUT_WALLET_IMPORT=false

# Wallet algorithm
# INPUT_WALLET_ALGORITHM=secp256k1-bip44

# Key derivation number
# INPUT_WALLET_NUMBER=0

# Wallet secret/mnemonic (KEEP SECRET!)
# INPUT_WALLET_SECRET=your mnemonic phrase here
